@page "/rotatearray"
<h3>Rotate Array</h3>
<p>TASK : rotate array by k steps</p>
<hr class="solid">
<div class="row justify-content-center m-3">
    <div class="col-sm-8">
        <p>INPUT = { 1, 2, 3, 4, 5 }</p>
        <p>rotate by k places: <input type="number" @bind="k" /></p>
        
        <hr class="solid">
        <button class="btn btn-primary" @onclick="Rotate">Run Code</button>
        <hr class="solid">
        <p>OUTPUT :</p>
        <p><strong>@result</strong></p>
        <hr class="solid">

        <button class="btn btn-primary" @onclick="Show">Show Code</button>
        <div style="@showcode">
            <img src="img/Rotate.PNG" alt="Image">
        </div>
    </div>
</div>
@code {

    public string showcode = "display:none";
    public void Show()
    {
        showcode = "display:flex";
    }
    public int[] nums = { 1, 2, 3, 4, 5 };
        
    public int k = 3;

    public string result = "";

    public void Rotate()
    {
        int[] a = new int[nums.Length];
        for (int i = 0; i < nums.Length; i++)
        {
            a[(i + k) % nums.Length] = nums[i];
        }
        for (int i = 0; i < nums.Length; i++)
        {
            nums[i] = a[i];
        }
        foreach (var item in nums)
        {
            result += " " + item;
        }
    }
}